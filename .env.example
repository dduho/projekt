# ==================================================
# PRISM - Project Intelligence & Status Manager
# Configuration Environment
# ==================================================

APP_NAME="PRISM"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=Africa/Lome
APP_URL=http://localhost:8080
APP_LOCALE=fr

# ==================================================
# DOCKER PORTS
# ==================================================
APP_PORT=8080
DB_PORT=5432
REDIS_PORT=6379
REVERB_PORT=6001
MAIL_PORT=1025
MAILPIT_UI_PORT=8025

# ==================================================
# DATABASE POSTGRESQL
# ==================================================
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=prism
DB_USERNAME=prism
DB_PASSWORD=secret

# ==================================================
# REDIS CACHE & SESSIONS
# ==================================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

CACHE_DRIVER=redis
CACHE_PREFIX=prism_cache_

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false

# ==================================================
# QUEUE & JOBS
# ==================================================
QUEUE_CONNECTION=redis
HORIZON_PREFIX=prism_horizon:

# ==================================================
# BROADCASTING (WEBSOCKETS)
# ==================================================
BROADCAST_CONNECTION=reverb

REVERB_APP_ID=prism
REVERB_APP_KEY=prism-key
REVERB_APP_SECRET=prism-secret
REVERB_HOST=reverb
REVERB_PORT=8080
REVERB_SCHEME=http

VITE_REVERB_APP_KEY="${REVERB_APP_KEY}"
VITE_REVERB_HOST="${REVERB_HOST}"
VITE_REVERB_PORT="${REVERB_PORT}"
VITE_REVERB_SCHEME="${REVERB_SCHEME}"

# ==================================================
# MAIL
# ==================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@prism.local"
MAIL_FROM_NAME="${APP_NAME}"

# ==================================================
# FILESYSTEM
# ==================================================
FILESYSTEM_DISK=local

# ==================================================
# LOGGING
# ==================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==================================================
# AUTHENTICATION
# ==================================================
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8080,127.0.0.1,127.0.0.1:8080

# ==================================================
# VITE
# ==================================================
VITE_APP_NAME="${APP_NAME}"
